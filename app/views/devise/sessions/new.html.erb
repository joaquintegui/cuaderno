<div class = 'row'>
  <div class = "well col-md-6 col-md-offset-3 text-left">
    <h2 class = 'text-center'>Ingresar</h2>
    <p class = 'text-center'>Ingresa con tu usuario y contaseña</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, 'Correo electronico' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password, 'Contraseña' %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Recordarme en esta computadora' %>
        </div>
      <% end -%>
    
      <div class="actions">
        <%= f.submit "Ingresar", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>